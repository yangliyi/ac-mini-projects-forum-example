<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Action</th>
  </tr>
  <% @posts.each do |p| %>
  <tr>
    <td><%= p.title %></td>
    <td><%= p.user_email %></td>
    <td>
    <% if current_user.manage?(p) %>
      <%= link_to 'Edit', edit_post_path(p) %>
      <%= link_to 'Delete', post_path(p), :method => :delete, :data => { :confirm => "Are you sure you want to do this?" } %>
    <% end %>
    </td>
  </tr>
  <% end %>
</table>
